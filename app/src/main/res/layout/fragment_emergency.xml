<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.geeks.hackathon.EmergencyFragment">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scanner_view_emerg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        app:autoFocusButtonColor="@color/colorPrimary"
        app:autoFocusButtonVisible="true"
        app:flashButtonColor="@color/colorPrimary"
        app:flashButtonVisible="true"
        app:frameAspectRatioHeight="1"
        app:frameAspectRatioWidth="1"
        app:frameColor="@color/colorPrimary"
        app:frameCornersSize="50dp"
        app:frameSize="0.75"
        app:frameThickness="2dp"
        app:maskColor="@color/colorGray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Or enter the code manually"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/fab_margin"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:weightSum="1"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".1"></LinearLayout>

        <EditText
            android:id="@+id/emerg_et_id"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight=".8"
            android:background="@drawable/edittext_border_color"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0"
        android:weightSum="1"
        android:layout_marginTop="@dimen/fab_margin"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".1"></LinearLayout>

        <Button
            android:id="@+id/emerg_btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:background="@color/colorPrimary"
            android:text="Send the request"
            android:textColor="@android:color/white"
            />
    </LinearLayout>

</LinearLayout>
